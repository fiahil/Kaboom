<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="KaboomEditor.Pages.MainWindow"
        Title="Kaboom Fancy Editor" Height="720" Width="1280" WindowStartupLocation="CenterScreen" Background="#FFCCCCCC" ResizeMode="NoResize" Icon="Icon.png">
    <Grid >
        <StatusBar Margin="0,635,0,0" Width="832" HorizontalAlignment="Left">
            <Label Content="Filename" Height="25"/>
            <TextBox x:Name="TextBoxFilename" Height="20" TextWrapping="Wrap" Text="level" Width="66"/>
            <Button x:Name="ButtonSave" Content="Save" Width="75" Height="20" Click="ButtonSave_OnClick"/>
        </StatusBar>
        <StatusBar HorizontalAlignment="Right" Margin="0,635,0,0" Width="442">
        	<Label Content="Height" Height="25"/>
        	<TextBox x:Name="TextBoxHeight" Height="20" TextWrapping="Wrap" Text="20" Width="66"/>
        	<Label Content="Width" Height="25"/>
        	<TextBox x:Name="TextBoxWidth" Height="20" TextWrapping="Wrap" Text="20" Width="66"/>
        	<Button x:Name="ButtonNew" Content="New" Width="75" Height="20" Click="ButtonNew_OnClick"/>
        </StatusBar>
        <UniformGrid x:Name="Board" HorizontalAlignment="Left" Height="630" VerticalAlignment="Top" Width="1274"/>
    </Grid>
</Window>
